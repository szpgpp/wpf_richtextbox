<Window x:Class="wpf_RightTextBox1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_RightTextBox1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <ToolBarPanel Height="30" DockPanel.Dock="Top">
            <ToolBar Height="30">
                <Button Name="btnBold">
                    <Image Source="images/toolbar/bold.png"/>
                </Button>
                <Button Name="btnItalic">
                    <Image Source="images/toolbar/italic.png"/>
                </Button>
                <Button Name="btnUnderline">
                    <Image Source="images/toolbar/underline.png"/>
                </Button>
                <Button Name="btnStrike">
                    <Image Source="images/toolbar/strike.png"/>
                </Button>
            </ToolBar>
        </ToolBarPanel>
        <RichTextBox Name="rtbText"></RichTextBox>
    </DockPanel>
</Window>
